<?xml version="1.0" encoding="UTF-8"?>
<pages:PopupPage
    xmlns:pages="clr-namespace:Rg.Plugins.Popup.Pages;assembly=Rg.Plugins.Popup" xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TeamX.SendRequest_PopUp">
    <StackLayout VerticalOptions="Center" HorizontalOptions="Center">
        <Frame Padding="0" CornerRadius="30">
            <StackLayout Orientation="Vertical" BackgroundColor="White" 
                 VerticalOptions="Center" HorizontalOptions="Center" Padding="20">
                <Label Text="Write here your message" />
                <Editor x:Name="MessageEditor" TextChanged="MessageEditor_TextChanged" 
                    BackgroundColor="White" TextColor="Black" />
                <Button Text="Done" Clicked="Done_Clicked"/>
            </StackLayout>
        </Frame>
    </StackLayout>
</pages:PopupPage>